{
	"name": "DailyScrum",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "yarn test:lint && yarn test:flow && yarn test:unit",
		"test:lint": "eslint . --quiet",
		"test:unit": "jest",
		"test:flow": "flow",
		"format": "find ./src -name '*.js' | xargs ./node_modules/.bin/prettier --write --print-width 120 --single-quote --trailing-comma es5",
		"deploy": "./bin/code-push.sh --android --ios",
		"deploy:android": "./bin/code-push.sh --android",
		"deploy:ios": "./bin/code-push.sh --ios",
		"deploy:staging": "yarn deploy:staging:android && yarn deploy:staging:ios",
		"deploy:staging:android": "bundle exec fastlane android deploy --env=staging",
		"deploy:staging:ios": "bundle exec fastlane ios deploy --env=staging"
	},
	"dependencies": {
		"@yfuks/react-native-action-sheet": "^0.0.3",
		"chroma-js": "^1.3.3",
		"date-fns": "^1.28.4",
		"lodash": "^4.17.4",
		"lottie-react-native": "^1.1.1",
		"react": "16.0.0-alpha.12",
		"react-native": "0.45.1",
		"react-native-animatable": "^1.2.2",
		"react-native-code-push": "^3.0.1-beta",
		"react-native-pathjs-charts": "^0.0.29",
		"react-native-vector-icons": "^4.2.0",
		"react-navigation": "1.0.0-beta.11",
		"react-redux": "^5.0.5",
		"redux": "^3.7.0",
		"redux-persist": "^4.8.0",
		"redux-saga": "^0.14.3"
	},
	"devDependencies": {
		"babel-eslint": "^7.2.2",
		"babel-preset-react-native": "1.9.1",
		"babel-preset-react-native-stage-0": "^1.0.1",
		"eslint": "^3.19.0",
		"eslint-config-prettier": "^2.3.0",
		"eslint-config-react-app": "^0.6.2",
		"eslint-plugin-flowtype": "^2.30.4",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-jsx-a11y": "^4.0.0",
		"eslint-plugin-prettier": "^2.1.2",
		"eslint-plugin-react": "^6.10.3",
		"flow-bin": "^0.45.0",
		"jest": "^19.0.2",
		"prettier": "^1.5.2"
	},
	"jest": {
		"preset": "react-native"
	}
}
